<%- include('partials/nav.ejs') %>
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card card-body">
                <h3 class="text-center">Account Register</h3>
                <form action="/register" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" required name="email" value="">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" required name="password" value="">
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" class="form-control" required name="password2" value="">
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">Submit</button>
                </form>
            </div>
            <div class="mt-3">
                <% if(error) {%>
                    <div class="alert alert-danger text-center">
                        <p>
                            <%= error %>
                        </p>
                        <% } %>
                    </div>
            </div>
        </div>
    </div>
    </body>

    </html>